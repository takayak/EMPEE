%table.table.table-responsive.table-hover
  %tr
    %td{:colspan => "2"}
      = image_tag @post.image.to_s,size:"150x150", alt: "test" ,class: 'post__image'
  %tr
    %th
      タイトル
    %td
      #{@post.title}
  %tr
    %th
      コンテンツ
    %td
      #{@post.content}
  %tr
    %th
      時給：
    %td
      #{@post.wage}
  %tr
    %th
      勤務日
    %td
      #{@post.date}
  %tr
    %th
      勤務時間帯
    %td
      #{@post.timezone}
  %tr
    %th
      = link_to "リクエスト", new_post_request_path(@post.id), class: 'btn btn-primary'
      = link_to "応募状況", post_requests_path(@post.id), class: 'btn btn-primary'
  %tr
    %th
      - @requests.each do |request|
        .div
        = link_to request.user.name, user_path(request.user.id), class: 'btn btn-primary'
        =request.user.name
        =request.message
  